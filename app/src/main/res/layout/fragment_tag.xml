<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

  <FrameLayout
      android:id="@+id/frameLayout"
      android:layout_width="wrap_content"
      android:layout_height="36dp"
      android:layout_marginTop="24dp"
      android:background="@drawable/rectangle51"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tag_text_view"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/tag_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"

        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginRight="12dp"

        android:textSize="12sp"
        android:textColor="#979797"
        android:textAlignment="center" />
  </FrameLayout>


  <ImageView
      android:id="@+id/close_image_view"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:src="@drawable/black_x2x"

      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/frameLayout"/>

  <ImageView
      android:id="@+id/main_image_view"
      android:layout_width="8dp"
      android:layout_height="8dp"
      android:src="@drawable/ellipse18"

      app:layout_constraintTop_toBottomOf="@+id/frameLayout"
      app:layout_constraintLeft_toRightOf="@+id/frameLayout"/>
</androidx.constraintlayout.widget.ConstraintLayout>

