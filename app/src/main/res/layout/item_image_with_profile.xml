<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/detailviewitem_imageview_content"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@color/blue_grey_800"
        tools:layout_editor_absoluteY="50dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/detailviewitem_profile_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="7.5dp"
        app:layout_constraintTop_toTopOf="@+id/detailviewitem_imageview_content"
        app:layout_constraintLeft_toLeftOf="@+id/detailviewitem_imageview_content"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/detailviewitem_profile_textview"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center"
        android:maxLines="1"
        android:layout_margin="7.5dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/detailviewitem_imageview_content"
        app:layout_constraintLeft_toRightOf="@+id/detailviewitem_profile_image"
        tools:text="User Name" />
</androidx.constraintlayout.widget.ConstraintLayout>
