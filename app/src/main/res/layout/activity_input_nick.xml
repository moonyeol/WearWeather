<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.InputNickActivity">




    <TextView
        android:id="@+id/editNickLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosans"
        android:lineHeight="24sp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="12dp"
        android:text="@string/input_nick_label"
        android:textColor="#00060C"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="116dp"/>

    <EditText
        android:id="@+id/editNick"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp"
        android:includeFontPadding="true"
        android:background="@drawable/input_border"
        android:paddingLeft="12dp"
        android:hint="@string/input_nick"
        app:layout_constraintTop_toBottomOf="@+id/editNickLabel"

/>

    <TextView
        android:id="@+id/text_nick_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/nick_possible"
        app:layout_constraintEnd_toEndOf="@+id/editNick"
        app:layout_constraintTop_toBottomOf="@+id/editNick" />

</androidx.constraintlayout.widget.ConstraintLayout>